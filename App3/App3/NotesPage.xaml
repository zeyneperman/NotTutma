<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BkmKitap.SQlite.NotesPage">
    <ContentPage.Content>
        <StackLayout Background="Black">
            <StackLayout Padding="15düzenleme,10,15,10">
                <Button BackgroundColor="DarkOrange" Text="Not Ekle" Clicked="Button_Clicked"></Button>
            </StackLayout>
            <StackLayout Padding="20,0,0,0">
                <ListView x:Name="listView"
                      ItemSelected="listView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label FontSize="17" TextColor="White" Text="{Binding Email}"></Label>
                                    <Label TextColor="WhiteSmoke" Text="{Binding Password}"></Label>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>