<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Deneme.BookDetailsPage">
    <ContentPage.Content>
        <StackLayout Background="White">
            <Frame >
                <StackLayout>
                    <ScrollView>
                        <StackLayout HorizontalOptions="Center">
                            <StackLayout >
                                <Image x:Name="image" Source="{Binding BookImage}" HeightRequest="100" WidthRequest="100"/>
                                <Label x:Name="name" Text="{Binding BookName}" HorizontalTextAlignment="Center"/>
                                <Label x:Name="author" Text="{Binding Description}" Margin="20,20" FontSize="Small"/>

                            </StackLayout>
                        </StackLayout>
                    </ScrollView>
                    <StackLayout Background="White" >
                        <AbsoluteLayout>
                            <Button Text="Sepete Ekle" Background="FireBrick" Clicked="AddToBasket"></Button>
                        </AbsoluteLayout>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>